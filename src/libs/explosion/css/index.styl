.explosion {
  display: none;
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background: white;
  min-width: 1023px;
  min-height: 600px;
  z-index: 999;
  color: black;
  opacity: 0;

  &_Opened {
    display: block;
  }

  &_Opening {
    display: block;

    .explosionImage {
      transition none;
    }
  }

  &Controls {
    display: flex;
    flex-direction: column;
    width: 4rem;
    position: absolute;
    z-index: 7;
    justify-content: center;
    right: 22%;
    top: 40%;
    //margin-top 3000px;
    height: 400px;
    transition: margin .8s;
  }
  &Image {
    position: absolute;
    width: 500px;
    object-fit: cover;
    display: block;
    z-index 2;
    height auto
    transform translate3d(0, 0, 0) scale(1);
    transform-origin: 50% 50%;
    backface-visibility: hidden;
    transition: transform .7s, opacity .7s;
  }


  &Close {
    position: absolute;
    top: 0;
    width: 3rem;
    height: 3rem
    border: none;
    margin-left 7px;
    background none;
    background-repeat no-repeat;
    background-position: center;
    background-size 90%;
    background-image: url("/libs/explosion/images/close.svg");
    cursor: pointer;
  }

  &Summary {
    position absolute;
    bottom 0;
    left 0
    z-index 9;
    background: #2d5051
    transition width .7s
    color #ffffff
    width 0
    overflow hidden

    &Content {
      padding 0.5rem 5rem;
      white-space nowrap;
      opacity 1;
      transition opacity .3s
    }
  }

  &Title {
    font-size 2em
    text-transform uppercase;
    letter-spacing 0.1em;
  }

  &Description {
    color: #daa35b
  }



  &Navs {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  &Nav {
    width 3rem;
    height 3rem;
    border-radius: 50%;
    border: 3px solid black;
    background-color: transparent;
    background-repeat: no-repeat;
    background-size 85%;
    text-align center;
    background-position: center;
    cursor: pointer;
    opacity 1;
    transition: background-color 0.3s, opacity 0.3s;


    &:hover {
      background-color: black;
    }

    &:disabled {
      pointer-events none;
      opacity: 0.3;
    }

    &Prev {
      background-image url('/libs/explosion/images/arrow-up.svg');

      &:hover {
        background-image url('/libs/explosion/images/arrow-up-white.svg');
      }
    }

    &Next {
      background-image: url('/libs/explosion/images/arrow-down.svg')

      &:hover {
        background-image: url("/libs/explosion/images/arrow-down-white.svg")
      }
    }

  }

  &Counter {
    font-weight bold;
    font-size 1.2rem;
    padding 1rem 0;
  }


}